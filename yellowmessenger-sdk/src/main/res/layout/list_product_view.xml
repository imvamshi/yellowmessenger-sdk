<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/product_action_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_top"
                android:gravity="center"
                android:padding="10dp"
                android:text="Secondary button"
                android:textColor="#cccccc"
                android:typeface="serif"
                android:visibility="gone" />

            <TextView
                android:id="@+id/product_action_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_top"
                android:gravity="center"
                android:padding="10dp"
                android:text="Secondary button"
                android:textColor="@color/primary_color"
                android:typeface="serif"
                android:visibility="gone" />

            <TextView
                android:id="@+id/product_action_button_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_top"
                android:gravity="center"
                android:padding="10dp"
                android:text="Secondary button"
                android:textColor="@color/primary_color"
                android:typeface="serif"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/product_details_layout">

                <LinearLayout
                    android:id="@+id/product_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Product Name"
                        android:textColor="#476984"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_name"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:textColor="@color/primary_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/product_price_original"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_price"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:textSize="12sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/product_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_price_original"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/offer_color"
                        android:textSize="12sp"
                        android:typeface="serif" />

                </LinearLayout>

                <TextView
                    android:id="@+id/product_action_button_secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/product_action_button"
                    android:layout_gravity="center"
                    android:background="@drawable/border_top"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Secondary button"
                    android:textColor="@color/primary_color"
                    android:typeface="serif"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/product_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:background="@drawable/buy_button_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="BUY"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>